<div class="mt-4">
  <h3>Edit</h3>
  <form method="POST" action="/authors/{{authors._id}} ?_method=PUT">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" value="{{authors.name}}" class="form-control" />
    </div>
    <div class="form-group">
      <label for="description">BirthDate:</label>
      <input class="form-control" value="{{authors.birthdate}}" data-date-format="dd-mm-yyyy" name="birthdate" id="datepicker" />
    </div>
    <label for="exampleFormControlSelect1">Gender</label>
    <select name="gender" value="{{authors.gender}}" class="form-control" id="exampleFormControlSelect1">
      <option value="">Select....</option>
      <option value="false">Male</option>
      <option value="true">Female</option>
    </select>
    <div>
      <button type="submit" class="btn btn-success mt-4">Edit</button>
      <a class="btn btn-primary mt-4" href="/authors/index" role="button">Cancel</a>
    </div>
  </form>
</div>

<script type="text/javascript">
  $('#datepicker').datepicker({ weekStart: 1, daysOfWeekHighlighted: "6,0",
  autoclose: true, todayHighlight: true, });
  $('#datepicker').datepicker("setDate", new Date());
</script>